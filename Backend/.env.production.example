# Production Environment Configuration
# Copy this file to .env.production and fill in the values

# Database
DATABASE_URL=postgresql://pricewatch:YOUR_SECURE_PASSWORD@db:5432/pricewatch
POSTGRES_USER=pricewatch
POSTGRES_PASSWORD=YOUR_SECURE_PASSWORD
POSTGRES_DB=pricewatch

# Security - IMPORTANT: Generate a secure secret key
# python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=YOUR_SECURE_SECRET_KEY_HERE

# Redis
REDIS_URL=redis://:YOUR_REDIS_PASSWORD@redis:6379/0
REDIS_PASSWORD=YOUR_REDIS_PASSWORD

# Email Configuration
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASSWORD=your-smtp-password
EMAIL_FROM=noreply@pricewatch.com

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Logging
LOG_LEVEL=INFO
LOG_DIR=/app/logs
ENABLE_JSON_LOGS=true
ENABLE_LOG_ROTATION=true

# Sentry Error Monitoring
# Get your DSN from https://sentry.io
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

# Scraping
MAX_PARALLEL_SCRAPERS=5
SCRAPING_BATCH_SIZE=10

# Password Policy
MIN_PASSWORD_LENGTH=8
REQUIRE_UPPERCASE=true
REQUIRE_LOWERCASE=true
REQUIRE_DIGIT=true
REQUIRE_SPECIAL_CHAR=true

# Token Expiration
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
