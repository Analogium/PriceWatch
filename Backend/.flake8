[flake8]
max-line-length = 120
exclude =
    .git,
    __pycache__,
    migrations,
    venv,
    .venv,
    alembic/versions,
    *.pyc
ignore =
    E203,  # whitespace before ':'
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator
per-file-ignores =
    __init__.py:F401
