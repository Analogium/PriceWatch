					{
						"key": "Authorization",
						"value": "Bearer {{token}}",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"target_price\": 179.99,\n  \"name\": \"Mon produit renommé\"\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/api/v1/products/{{productId}}",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"v1",
						"products",
						"{{productId}}"
					]
				},
				"description": "Modifier le prix cible ou le nom d'un produit"
			},
			"response": []
		},
